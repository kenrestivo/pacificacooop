php_flag magic_quotes_runtime 0
php_flag magic_quotes_gpc 0
php_value  max_execution_time 240
php_value  memory_limit 80M
php_value  display_errors Off

AddDefaultCharset utf-8
AddCharset utf-8 .php .inc .html

<Files ~ "\.inc$">
  Order allow,deny
  Deny from all
</Files>

